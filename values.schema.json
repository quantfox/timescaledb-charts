{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "properties": {
        "auth": {
            "properties": {
                "db": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "user": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "debugMode": {
            "type": "boolean"
        },
        "image": {
            "properties": {
                "imagePullSecrets": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "livenessProbe": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "failureThreshold": {
                    "type": "integer"
                },
                "initialDelaySeconds": {
                    "type": "integer"
                },
                "periodSeconds": {
                    "type": "integer"
                },
                "successThreshold": {
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "persistence": {
            "properties": {
                "accessMode": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },
                "mountPath": {
                    "type": "string"
                },
                "pgData": {
                    "type": "string"
                },
                "size": {
                    "type": "string"
                },
                "storageClassName": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "subPath": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "provisioning": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "sqlScript": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "readinessProbe": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "failureThreshold": {
                    "type": "integer"
                },
                "initialDelaySeconds": {
                    "type": "integer"
                },
                "periodSeconds": {
                    "type": "integer"
                },
                "successThreshold": {
                    "type": "integer"
                },
                "timeoutSeconds": {
                    "type": "integer"
                }
            },
            "type": "object"
        },
        "service": {
            "properties": {
                "port": {
                    "type": "integer"
                },
                "targetPort": {
                    "type": "integer"
                },
                "type": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "sqlScript": {
            "type": "string"
        }
    },
    "type": "object"
}
